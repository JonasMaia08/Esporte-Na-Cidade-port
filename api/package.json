{
  "name": "esporte-cidade-api",
  "version": "1.0.0",
  "main": "dist/server.js",
  "scripts": {
    "start": "npm run start:prod",
    "build": "tsc",
    "start:prod": "node dist/server.js",
    "dev": "nodemon --watch \"src/\" -r \"tsconfig-paths/register\" --exec \"ts-node src/server.ts\" -e ts --env-file .env",
    "migration": "node dist/migrations/run.js",
    "seed": "node dist/seeds/seed.js",
    "deploy": "npm run build && npm run migration && npm run seed && npm start"
  },
  "dependencies": {
    "@faker-js/faker": "^9.7.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.5.0",
    "express": "^4.21.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.0",
    "nodemailer": "^7.0.3",
    "pdfkit": "^0.17.1",
    "sharp": "^0.34.2",
    "sqlite3": "^5.1.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.6",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "supertest": "^7.1.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.1",
    "typeorm": "^0.3.22",
    "typescript": "^5.8.3"
  }
}
